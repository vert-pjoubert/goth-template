package templates

templ ServersInfiniteScroll(page int, servers []Server) {
    <div id="servers-list">
        for i, server in servers {
            ServerCard(server)
        }
        <div hx-get={"/load-more-servers?page=" + itoa(page + 1)} hx-trigger="revealed" hx-swap="afterend">
            <p>Loading more servers...</p>
        </div>
    </div>
}
