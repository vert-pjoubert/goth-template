package templates

templ EventsInfiniteScroll(nextPage string, events []Event) {
	<div id="events-list" class="events-container">
		<ul>
		for _, event := range events {
			@EventCard(event.ThumbnailURL, event.Source, event.Time, event.Severity, event.SeverityClass, event.Description, event.EventID, event.EventType)
		}
		</ul>
		<div hx-get={"/view?view=events&page=" + nextPage} hx-trigger="revealed" hx-swap="afterend">
			<p>Loading more events...</p>
		</div>
	</div>
}
